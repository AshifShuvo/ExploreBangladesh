<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreatePlanDetails"
    android:orientation="vertical"
    android:padding="16dp"
    android:weightSum="7">


    <ImageView
        android:layout_weight="2"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:src="@drawable/icon"
        android:layout_gravity="center"
        android:padding="5sp"/>
    <TextView
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cretae a new plan: "
        android:layout_gravity="center"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#000000"
        android:padding="10sp"/>

    <EditText
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tour Name"
        android:id="@+id/tourNameField"
        />
    <EditText
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tour Place"
        android:id="@+id/tourPlaceField"
        />
    <EditText
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tour Date (Press twice to see calender view)"
        android:id="@+id/tourDateField"/>

    <Button

        android:id="@+id/submit_plan"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="12dp"
        android:text="Submit"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:background="#000000"
        tools:text="Submit"
        android:textAllCaps="false"/>


</LinearLayout>