<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            android:gravity="center"
            android:orientation="vertical"
            tools:context=".MainActivity">


            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginBottom="10dp"
                app:srcCompat="@drawable/icon" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Please select a profile photo: "
                android:gravity="center_horizontal"
                android:textStyle="bold"
                android:textSize="20sp"/>

            <ImageView
                android:id="@+id/signUpImageId"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:scaleType="fitXY"
                android:src="@drawable/profile"
                android:configChanges="orientation|screenSize"/>

            <EditText
                android:id="@+id/signUpnameId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginBottom="20dp"
                android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ "
                android:drawableStart="@drawable/ic_person_black_24dp"
                android:hint="Your Name"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold"
                android:paddingTop="5dp"/>

            <EditText
                android:id="@+id/signUpemailId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginBottom="20dp"
                android:drawableStart="@drawable/ic_email_black_24dp"
                android:hint="E-mail"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/signUpphoneId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginBottom="20dp"
                android:digits="+0123456789"
                android:drawableStart="@drawable/ic_phone_black_24dp"
                android:hint="Phone Number"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/signUppasswordId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginBottom="20dp"
                android:drawableStart="@drawable/ic_lock_black_24dp"
                android:hint="Passowrd"
                android:inputType="textPassword"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/signup_btn"
                android:layout_width="180dp"
                android:layout_height="60dp"
                android:background="@drawable/buttonshape"
                android:shadowColor="#2F9636"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:text="Sign Up"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/signUpSignIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Sign In here"
                android:textColor="#000000"
                android:textSize="17sp"
                android:textStyle="bold" />

            <ProgressBar
                android:id="@+id/progressbarId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone" />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>